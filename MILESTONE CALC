    private void btnCalculateActionPerformed(java.awt.event.ActionEvent evt) {                                             
try {
    int m1 = Integer.parseInt(txtM1.getText());
    int m2 = Integer.parseInt(txtM2.getText());
    int terminal = Integer.parseInt(txtTerminal.getText());

    if (!isValid(m1, 25) || !isValid(m2, 40) || !isValid(terminal, 35)) {
        JOptionPane.showMessageDialog(this, "Please enter scores within the allowed range.");
        return;
    }

    int total = m1 + m2 + terminal;
    lblResult.setText(total + "/100");
} catch (NumberFormatException e) {
    JOptionPane.showMessageDialog(this, "Please enter valid numbers only.");
}
        // TODO add your handling code here:
    }                                            

